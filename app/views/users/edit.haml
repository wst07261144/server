-provide(:title,"Edit user")
%h1 Update you profile
%div(class="row")
  %div(class="span6 offset3")
    =form_for(@user) do |f|
      = render 'field', f: f
      = f.submit "Save changes", class: "btn btn-large btn-primary"

    = gravatar_for @user
    =link_to 'change','http://gravatar.com/emails'